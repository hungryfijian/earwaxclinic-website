---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Find Ear Wax Removal Clinics Near You - UK Locations | Earwax Clinic Network";
const pageDescription = "Interactive map of professional ear wax removal clinics across the UK. Find qualified microsuction and irrigation services near you with instant booking.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main>
    <div class="hero-section">
      <div class="container">
        <h1>Find Your Nearest Clinic</h1>
        <p class="lead">
          Professional ear wax removal services across the UK. Safe, effective treatment by qualified practitioners.
        </p>
      </div>
    </div>

    <div class="container">
      <!-- Interactive Clinic Map -->
      <div id="map-container" style="width: 100%; height: 600px; border: 2px solid var(--color-primary); border-radius: 10px; margin: 20px 0; overflow: hidden; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
        <iframe
          src="https://earwax-clinic-map.netlify.app/"
          width="100%"
          height="100%"
          style="border: none;"
          title="Interactive Ear Wax Removal Clinic Map - Find Practitioners Near You"
          loading="lazy"
          allowfullscreen>
        </iframe>
      </div>

      <div style="background: #f8f9fa; padding: 2rem; border-radius: 8px; margin: 2rem 0;">
        <h2 style="color: var(--color-primary); text-align: center; margin-bottom: 2rem;">Contact Information</h2>
        <div style="text-align: center;">
          <p style="font-size: 1.2rem; margin-bottom: 1rem;">For immediate assistance or to book an appointment:</p>
          <div style="display: flex; justify-content: center; gap: 1rem; flex-wrap: wrap;">
            <a href="tel:08003317002" style="background: var(--color-success); color: white; padding: 1rem 2rem; text-decoration: none; border-radius: 6px; font-weight: bold;">ðŸ“ž Call 0800 331 7002</a>
            <a href="/treatments/" style="background: var(--color-primary); color: white; padding: 1rem 2rem; text-decoration: none; border-radius: 6px; font-weight: bold;">ðŸ“‹ View Services</a>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .hero-section {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    color: white;
    padding: 4rem 0 3rem;
    text-align: center;
  }

  .hero-section h1 {
    color: white;
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .lead {
    font-size: 1.2rem;
    opacity: 0.9;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  @media (max-width: 768px) {
    .hero-section {
      padding: 3rem 0 2rem;
    }

    .hero-section h1 {
      font-size: 2rem;
    }

    #map-container {
      height: 400px !important;
    }
  }
</style>