<style>
  :root {
    --primary-color: #00796B;
    --secondary-color: #004D40;
    --accent-color: #4CAF50;
    --text-color: #333;
    --light-bg: #f8f9fa;
    --border-color: #e0e0e0;
    --success-color: #4CAF50;
    --warning-color: #FF9800;
  }

  .hero-section {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    color: white;
    padding: 4rem 0;
    text-align: center;
  }

  .hero-section h1 {
    color: white;
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .lead {
    font-size: 1.2rem;
    opacity: 0.9;
    margin-bottom: 2rem;
  }

  .hero-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .stat {
    text-align: center;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: bold;
    color: var(--accent-color);
  }

  .stat-label {
    font-size: 0.9rem;
    opacity: 0.8;
    margin-top: 0.5rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
    margin: 3rem 0;
  }

  .testimonial-card {
    background: white;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    border: 1px solid var(--border-color);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .testimonial-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.15);
  }

  .testimonial-card.featured {
    border: 2px solid var(--accent-color);
    background: linear-gradient(145deg, #ffffff 0%, #f8fffe 100%);
  }

  .testimonial-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1.5rem;
  }

  .patient-info h3 {
    color: var(--primary-color);
    margin: 0 0 0.5rem 0;
    font-size: 1.2rem;
  }

  .location {
    color: #666;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .rating {
    color: #FFD700;
    font-size: 1.1rem;
  }

  .treatment-badge {
    background: var(--accent-color);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: bold;
  }

  blockquote {
    font-style: italic;
    font-size: 1.1rem;
    line-height: 1.6;
    color: var(--text-color);
    margin: 0 0 1.5rem 0;
    position: relative;
  }

  blockquote::before {
    content: '"';
    font-size: 3rem;
    color: var(--primary-color);
    opacity: 0.3;
    position: absolute;
    top: -0.5rem;
    left: -0.5rem;
  }

  .testimonial-footer {
    display: flex;
    justify-content: space-between;
    font-size: 0.9rem;
    color: #666;
    border-top: 1px solid var(--border-color);
    padding-top: 1rem;
  }

  .condition {
    font-weight: bold;
    color: var(--primary-color);
  }

  .before-after-section {
    margin: 4rem 0;
    padding: 3rem 0;
    background: var(--light-bg);
    border-radius: 12px;
  }

  .before-after-section h2 {
    text-align: center;
    color: var(--primary-color);
    margin-bottom: 2rem;
  }

  .comparison-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .before-after-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  }

  .before-after-card.success {
    background: linear-gradient(145deg, #ffffff 0%, #f0fff4 100%);
    border: 2px solid var(--success-color);
  }

  .before-after-card h3 {
    color: var(--primary-color);
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .symptom-list, .benefit-list {
    list-style: none;
    padding: 0;
  }

  .symptom-list li {
    padding: 0.5rem 0;
    position: relative;
    padding-left: 1.5rem;
  }

  .symptom-list li::before {
    content: '‚ùå';
    position: absolute;
    left: 0;
  }

  .benefit-list li {
    padding: 0.5rem 0;
    position: relative;
    padding-left: 1.5rem;
    color: var(--success-color);
  }

  .benefit-list li::before {
    content: '‚úÖ';
    position: absolute;
    left: 0;
  }

  .stats-section {
    margin: 4rem 0;
    text-align: center;
  }

  .stats-section h2 {
    color: var(--primary-color);
    margin-bottom: 2rem;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .stat-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    text-align: center;
  }

  .stat-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .stat-card .stat-number {
    color: var(--primary-color);
    font-size: 2.2rem;
    font-weight: bold;
    display: block;
    margin-bottom: 0.5rem;
  }

  .stat-description {
    color: #666;
    line-height: 1.4;
  }

  .video-testimonials {
    margin: 4rem 0;
  }

  .video-testimonials h2 {
    text-align: center;
    color: var(--primary-color);
    margin-bottom: 2rem;
  }

  .video-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .video-placeholder {
    background: #f0f0f0;
    border-radius: 12px;
    overflow: hidden;
    aspect-ratio: 16/9;
    position: relative;
    cursor: pointer;
  }

  .video-content {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: linear-gradient(45deg, rgba(0,121,107,0.8), rgba(0,77,64,0.8));
    color: white;
    text-align: center;
    padding: 2rem;
  }

  .play-button {
    width: 60px;
    height: 60px;
    background: rgba(255,255,255,0.9);
    color: var(--primary-color);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .video-info h4 {
    margin: 0 0 0.5rem 0;
  }

  .video-info p {
    margin: 0;
    opacity: 0.9;
    font-size: 0.9rem;
  }

  .cta-section {
    text-align: center;
    padding: 3rem 0;
    background: var(--light-bg);
    border-radius: 12px;
    margin: 3rem 0;
  }

  .cta-section h2 {
    color: var(--primary-color);
    margin-bottom: 1rem;
  }

  .cta-section p {
    font-size: 1.1rem;
    color: #666;
    margin-bottom: 2rem;
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: 1rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: bold;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background: var(--accent-color);
    color: white;
  }

  .btn-primary:hover {
    background: #45a049;
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: var(--primary-color);
    color: white;
  }

  .btn-secondary:hover {
    background: var(--secondary-color);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .hero-section {
      padding: 3rem 0;
    }

    .hero-section h1 {
      font-size: 2rem;
    }

    .hero-stats {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .testimonials-grid {
      grid-template-columns: 1fr;
    }

    .comparison-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      padding: 0 1rem;
    }

    .stats-grid {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 250px;
    }
  }
</style>