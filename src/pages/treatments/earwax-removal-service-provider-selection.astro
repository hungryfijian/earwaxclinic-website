  .value { background: linear-gradient(145deg, #fff3e0 0%, #ffe0b2 100%); }

  .importance-icon {
    font-size: var(--font-size-4xl);
    margin-bottom: var(--spacing-md);
  }

  .importance-item h3 {
    color: var(--primary-color);
    margin-bottom: var(--spacing-md);
  }

  /* Qualifications Framework */
  .qualifications-framework {
    display: grid;
    gap: var(--spacing-2xl);
