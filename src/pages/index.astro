---
import BaseLayout from '../layouts/BaseLayout.astro';

// This will eventually pull from your data
const pageTitle = "Ear Wax Removal Clinics UK - Find Qualified Practitioners Near You";
const pageDescription = "Find professional ear wax removal services across the UK. Qualified practitioners using microsuction, irrigation, and manual removal techniques.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main>
    <h1>Welcome to the Earwax Clinic Network</h1>

    <!-- We'll add your existing homepage content here -->
    <!-- For now, let's just get the structure working -->

    <section class="hero">
      <h2>Find Professional Ear Wax Removal Near You</h2>
      <p>Connect with qualified practitioners across the UK</p>
      <a href="/earwax-clinic-locations/" class="cta-button">Find a Clinic</a>
    </section>

    <section class="services">
      <h2>Professional Ear Care Services</h2>
      <div class="service-grid">
        <div class="service">
          <h3>Microsuction</h3>
          <p>Safe, gentle removal using medical suction</p>
        </div>
        <div class="service">
          <h3>Irrigation</h3>
          <p>Water-based removal technique</p>
        </div>
        <div class="service">
          <h3>Manual Removal</h3>
          <p>Careful extraction using specialised tools</p>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
