  }

  .alternative-item {
    background: #E8F5E8;
    border: 1px solid var(--accent-color);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
  }

  .alternative-item h4 {
    color: var(--accent-color);
    margin-bottom: var(--spacing-sm);
  }

