  .age-timeline {
    display: grid;
    gap: var(--spacing-xl);
    margin: var(--spacing-2xl) 0;
  }

  .age-group {
    background: white;
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
