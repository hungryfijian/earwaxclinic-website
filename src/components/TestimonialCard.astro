---
export interface Props {
  quote: string;
  author: string;
  role?: string;
  location?: string;
  rating?: number;
  date?: string;
  image?: string;
  variant?: 'default' | 'featured' | 'compact';
}

const {
  quote,
  author,
  role,
  location,
  rating = 5,
  date,
  image,
  variant = 'default'
} = Astro.props;

const cardClasses = `testimonial-card testimonial-card--${variant}`;

// Generate star rating
const stars = Array.from({ length: 5 }, (_, i) => i < rating);
---

<div class={cardClasses}>
  <div class="testimonial-card__content">
    <div class="testimonial-card__rating">
      {stars.map((filled) => (
        <span class={`star ${filled ? 'star--filled' : 'star--empty'}`}>â˜…</span>
      ))}
    </div>

    <blockquote class="testimonial-card__quote">
      <span class="quote-mark quote-mark--open">"</span>
      {quote}
      <span class="quote-mark quote-mark--close">"</span>
    </blockquote>

    <div class="testimonial-card__footer">
      <div class="testimonial-card__author-info">
        {image && (
          <div class="testimonial-card__avatar">
            <img src={image} alt={author} loading="lazy" />
          </div>
        )}

        <div class="testimonial-card__details">
          <div class="testimonial-card__author">{author}</div>
          {role && <div class="testimonial-card__role">{role}</div>}
          {location && <div class="testimonial-card__location">{location}</div>}
        </div>
      </div>

      {date && (
        <div class="testimonial-card__date">{date}</div>
      )}
    </div>
  </div>
</div>

<style>
  .testimonial-card {
    background: white;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--border);
    transition: all var(--transition-normal);
    overflow: hidden;
    height: 100%;
  }

  .testimonial-card:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  /* Card variants */
  .testimonial-card--featured {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    color: white;
    border: none;
  }

  .testimonial-card--featured .testimonial-card__quote {
    color: white;
  }

  .testimonial-card--featured .testimonial-card__author {
    color: white;
  }

  .testimonial-card--featured .testimonial-card__role,
  .testimonial-card--featured .testimonial-card__location {
    color: rgba(255, 255, 255, 0.8);
  }

  .testimonial-card--featured .star--filled {
    color: #FFD700;
  }

  .testimonial-card--featured .star--empty {
    color: rgba(255, 255, 255, 0.3);
  }

  .testimonial-card--compact {
    padding: var(--spacing-md);
  }

  .testimonial-card--compact .testimonial-card__content {
    padding: 0;
  }

  /* Content */
  .testimonial-card__content {
    padding: var(--spacing-lg);
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  /* Rating */
  .testimonial-card__rating {
    display: flex;
    gap: 2px;
    margin-bottom: var(--spacing-md);
  }

  .star {
    font-size: var(--font-size-lg);
    line-height: 1;
    transition: color var(--transition-fast);
  }

  .star--filled {
    color: #FFD700;
  }

  .star--empty {
    color: var(--border);
  }

  /* Quote */
  .testimonial-card__quote {
    font-size: var(--font-size-lg);
    line-height: var(--line-height-normal);
    color: var(--text-dark);
    margin: 0 0 var(--spacing-lg) 0;
    flex: 1;
    position: relative;
    font-style: italic;
  }

  .quote-mark {
    font-size: var(--font-size-3xl);
    line-height: 1;
    color: var(--primary-color);
    font-family: serif;
    position: absolute;
  }

  .quote-mark--open {
    top: -0.25rem;
    left: -0.5rem;
  }

  .quote-mark--close {
    bottom: -0.75rem;
    right: -0.25rem;
  }

  .testimonial-card--featured .quote-mark {
    color: rgba(255, 255, 255, 0.3);
  }

  /* Footer */
  .testimonial-card__footer {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-top: auto;
  }

  .testimonial-card__author-info {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .testimonial-card__avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
    border: 2px solid var(--border);
  }

  .testimonial-card--featured .testimonial-card__avatar {
    border-color: rgba(255, 255, 255, 0.3);
  }

  .testimonial-card__avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .testimonial-card__details {
    display: flex;
    flex-direction: column;
    gap: 1px;
  }

  .testimonial-card__author {
    font-weight: 600;
    color: var(--text-dark);
    font-size: var(--font-size-base);
    line-height: var(--line-height-tight);
  }

  .testimonial-card__role,
  .testimonial-card__location {
    font-size: var(--font-size-sm);
    color: var(--text-light);
    line-height: var(--line-height-tight);
  }

  .testimonial-card__date {
    font-size: var(--font-size-xs);
    color: var(--text-muted);
    flex-shrink: 0;
  }

  .testimonial-card--featured .testimonial-card__date {
    color: rgba(255, 255, 255, 0.7);
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .testimonial-card__content {
      padding: var(--spacing-md);
    }

    .testimonial-card__quote {
      font-size: var(--font-size-base);
    }

    .testimonial-card__footer {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--spacing-sm);
    }

    .testimonial-card__date {
      align-self: flex-end;
    }

    /* Compact variant on mobile */
    .testimonial-card--compact .testimonial-card__content {
      padding: var(--spacing-sm);
    }

    .testimonial-card--compact .testimonial-card__quote {
      font-size: var(--font-size-sm);
    }
  }

  @media (max-width: 480px) {
    .testimonial-card__avatar {
      width: 40px;
      height: 40px;
    }

    .star {
      font-size: var(--font-size-base);
    }

    .quote-mark {
      font-size: var(--font-size-2xl);
    }
  }

  /* Focus styles for accessibility */
  .testimonial-card:focus {
    outline: 2px solid var(--accent-color);
    outline-offset: 2px;
  }

  /* Animation for rating stars */
  .star {
    animation: fadeIn 0.3s ease-in-out;
  }

  .star:nth-child(1) { animation-delay: 0.1s; }
  .star:nth-child(2) { animation-delay: 0.2s; }
  .star:nth-child(3) { animation-delay: 0.3s; }
  .star:nth-child(4) { animation-delay: 0.4s; }
  .star:nth-child(5) { animation-delay: 0.5s; }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: scale(0.8);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
</style>