---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header class="nav-medical">
	<nav>
		<h2>
			<a href="/" class="nav-brand">
				{SITE_TITLE}
				<span class="trust-badge trust-badge-medical">Trusted Medical Care</span>
			</a>
		</h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/treatments">Treatments</HeaderLink>
			<HeaderLink href="/earwax-clinic-locations">Locations</HeaderLink>
		</div>
		<div class="social-links">
			<a href="mailto:info@earwaxclinic.co.uk" target="_blank" class="nav-link">
				<span class="sr-only">Contact Earwax Clinic</span>
				<svg viewBox="0 0 24 24" aria-hidden="true" width="24" height="24">
					<path fill="currentColor" d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
				</svg>
			</a>
			<a href="tel:+441234567890" target="_blank" class="nav-link">
				<span class="sr-only">Call Earwax Clinic</span>
				<svg viewBox="0 0 24 24" aria-hidden="true" width="24" height="24">
					<path fill="currentColor" d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
				</svg>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 var(--space-6);
		background: var(--color-bg-primary);
		backdrop-filter: blur(10px);
		border-bottom: 3px solid var(--color-medical);
		box-shadow: var(--shadow-medical);
		position: sticky;
		top: 0;
		z-index: var(--z-sticky);
	}

	h2 {
		margin: 0;
		font-size: var(--font-size-lg);
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		min-height: 70px;
	}

	nav a {
		padding: var(--space-3) var(--space-4);
		color: var(--color-text-secondary);
		border-bottom: 3px solid transparent;
		text-decoration: none;
		font-weight: var(--font-weight-medium);
		border-radius: var(--radius-md);
		transition: all var(--transition-fast);
		position: relative;
	}

	nav a:hover {
		color: var(--color-primary);
		background: var(--gradient-medical-soft);
		transform: translateY(-1px);
		border-bottom-color: var(--color-medical);
	}

	nav a.active {
		color: var(--color-primary);
		background: var(--gradient-medical-soft);
		border-bottom-color: var(--color-medical);
		box-shadow: var(--shadow-sm);
	}

	.nav-brand {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		gap: var(--space-1);
		font-family: var(--font-display);
		font-weight: var(--font-weight-bold);
		color: var(--color-primary) !important;
		transition: all var(--transition-fast);
		border: none !important;
		padding: var(--space-2) 0 !important;
	}

	.nav-brand:hover {
		color: var(--color-primary-hover) !important;
		transform: scale(1.02);
		background: none !important;
	}

	.trust-badge {
		font-size: var(--font-size-xs);
		padding: var(--space-1) var(--space-2);
		margin-top: var(--space-1);
	}

	.internal-links {
		display: flex;
		gap: var(--space-2);
	}

	.social-links {
		display: flex;
		gap: var(--space-3);
	}

	.social-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 44px;
		height: 44px;
		border-radius: var(--radius-lg);
		color: var(--color-text-muted);
		transition: all var(--transition-fast);
		border: none !important;
		padding: 0 !important;
	}

	.social-links a:hover {
		color: var(--color-primary);
		background: var(--gradient-medical-soft);
		transform: translateY(-2px);
		box-shadow: var(--shadow-medical);
	}

	@media (max-width: 768px) {
		header {
			padding: 0 var(--space-4);
		}

		.social-links {
			display: none;
		}

		.internal-links {
			gap: var(--space-1);
		}

		nav a {
			padding: var(--space-2) var(--space-3);
			font-size: var(--font-size-sm);
		}

		.trust-badge {
			display: none;
		}
	}

	@media (max-width: 480px) {
		.internal-links {
			flex-direction: column;
			gap: var(--space-1);
		}

		nav {
			flex-direction: column;
			align-items: flex-start;
			gap: var(--space-2);
			min-height: auto;
			padding: var(--space-3) 0;
		}
	}
</style>
