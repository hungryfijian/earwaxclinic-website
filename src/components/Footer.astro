---
const currentYear = new Date().getFullYear();

const footerLinks = {
  services: [
    { href: '/treatments/', label: 'Our Treatments' },
    { href: '/how-microsuction-works/', label: 'Microsuction' },
    { href: '/how-irrigation-works/', label: 'Irrigation' },
    { href: '/earwax-clinic-locations/', label: 'Find a Clinic' }
  ],
  information: [
    { href: '/about-ear-wax/', label: 'About Us' },
    { href: '/comprehensive-earwax-information/', label: 'Ear Wax Information' },
    { href: '/ear-wax-faq/', label: 'FAQ' },
    { href: '/testimonials/', label: 'Testimonials' }
  ],
  training: [
    { href: '/micro-suction-training/', label: 'Training Courses' },
    { href: '/professional-microsuction-training-earwax-removal/', label: 'Professional Training' },
    { href: 'https://www.thehearinglabstore.co.uk', label: 'Hearing Lab Store', external: true }
  ]
};
---

<footer class="site-footer">
  <div class="footer-container">
    <!-- Main Footer Content -->
    <div class="footer-main">
      <!-- Company Info -->
      <div class="footer-section company-info">
        <h3 class="footer-title">Earwax Clinic Network</h3>
        <p class="footer-description">
          The UK's leading network of qualified ear wax removal specialists.
          Over 150 clinics providing safe, professional microsuction and irrigation treatments.
        </p>

        <!-- Contact Info -->
        <div class="contact-info">
          <div class="contact-item">
            <strong>Freephone:</strong>
            <a href="tel:08003317002" class="contact-link">0800 331 7002</a>
          </div>
          <div class="contact-item">
            <strong>Local:</strong>
            <a href="tel:01619790212" class="contact-link">0161 979 0212</a>
          </div>
          <div class="contact-item">
            <strong>Ireland:</strong>
            <a href="tel:0212363250" class="contact-link">0212 363 250</a>
          </div>
        </div>

        <!-- Certifications -->
        <div class="certifications">
          <div class="cert-logos">
            <img src="https://image.jimcdn.com/app/cms/image/transf/dimension=120x10000:format=jpg/path/s7be4434f63c79658/image/ie3456658c472cd83/version/1674632299/hcpc-registered-logo.jpg" alt="HCPC Registered" class="cert-logo">
            <img src="https://image.jimcdn.com/app/cms/image/transf/dimension=120x10000:format=jpg/path/s7be4434f63c79658/image/i6c8bf31b83f61699/version/1674632319/nmc-registered-logo.jpg" alt="NMC Registered" class="cert-logo">
          </div>
          <p class="cert-text">Registered & Qualified Professionals</p>
        </div>
      </div>

      <!-- Services Links -->
      <div class="footer-section">
        <h4 class="footer-subtitle">Services</h4>
        <ul class="footer-links">
          {footerLinks.services.map((link) => (
            <li>
              <a href={link.href} class="footer-link">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Information Links -->
      <div class="footer-section">
        <h4 class="footer-subtitle">Information</h4>
        <ul class="footer-links">
          {footerLinks.information.map((link) => (
            <li>
              <a href={link.href} class="footer-link">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Training Links -->
      <div class="footer-section">
        <h4 class="footer-subtitle">Professional Training</h4>
        <ul class="footer-links">
          {footerLinks.training.map((link) => (
            <li>
              <a
                href={link.href}
                class="footer-link"
                target={link.external ? "_blank" : undefined}
                rel={link.external ? "noopener noreferrer" : undefined}
              >
                {link.label}
                {link.external && <span class="external-link-icon">â†—</span>}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <div class="copyright">
          <p>&copy; {currentYear} Earwax Clinic Network. Professional ear care across the UK & Ireland.</p>
          <p class="company-details">
            Trading as <a href="https://www.thehearinglabstore.co.uk" target="_blank" rel="noopener noreferrer" class="company-link">The Hearing Lab Store Ltd</a>
          </p>
        </div>

        <div class="footer-cta">
          <a href="/earwax-clinic-locations/" class="footer-cta-button">
            Find Your Local Clinic
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: var(--gradient-medical);
    color: var(--color-text-white);
    margin-top: auto;
    position: relative;
    overflow: hidden;
  }

  .site-footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.02) 50%, transparent 70%);
    pointer-events: none;
  }

  .footer-container {
    max-width: var(--container-xl);
    margin: 0 auto;
    padding: 0 var(--space-4);
    position: relative;
    z-index: 2;
  }

  .footer-main {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: var(--space-8);
    padding: var(--space-12) 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-section {
    display: flex;
    flex-direction: column;
  }

  .company-info {
    max-width: 400px;
  }

  .footer-title {
    color: var(--color-accent-bright);
    font-family: var(--font-display);
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    margin: 0 0 var(--space-4) 0;
    line-height: var(--line-height-tight);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .footer-description {
    color: rgba(255, 255, 255, 0.95);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-6);
    font-size: var(--font-size-base);
  }

  .footer-subtitle {
    color: var(--color-accent-bright);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    margin: 0 0 var(--space-4) 0;
    line-height: var(--line-height-tight);
  }

  /* Contact Info */
  .contact-info {
    margin-bottom: var(--space-8);
  }

  .contact-item {
    margin-bottom: var(--space-2);
    font-size: var(--font-size-sm);
  }

  .contact-item strong {
    color: var(--color-accent-bright);
    display: inline-block;
    width: 80px;
    font-weight: var(--font-weight-semibold);
  }

  .contact-link {
    color: var(--color-text-white);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    transition: all var(--transition-fast);
  }

  .contact-link:hover {
    color: var(--color-accent-bright);
    text-decoration: underline;
    text-shadow: 0 0 8px rgba(3, 255, 255, 0.5);
  }

  /* Certifications */
  .certifications {
    margin-top: 1rem;
  }

  .cert-logos {
    display: flex;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .cert-logo {
    height: 50px;
    width: auto;
    opacity: 0.8;
    transition: all var(--transition-base);
    border-radius: var(--radius-sm);
  }

  .cert-logo:hover {
    opacity: 1;
    transform: scale(1.05);
    box-shadow: var(--glow-sm);
  }

  .cert-text {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.8);
    margin: 0;
  }

  /* Footer Links */
  .footer-links {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-links li {
    margin-bottom: 0.5rem;
  }

  .footer-link {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: var(--font-size-sm);
    transition: all var(--transition-fast);
    display: flex;
    align-items: center;
    gap: var(--space-1);
    padding: var(--space-1) 0;
    border-radius: var(--radius-sm);
  }

  .footer-link:hover {
    color: var(--color-accent-bright);
    transform: translateX(4px);
    text-shadow: 0 0 8px rgba(3, 255, 255, 0.3);
  }

  .external-link-icon {
    font-size: 0.8rem;
    opacity: 0.7;
  }

  /* Footer Bottom */
  .footer-bottom {
    padding: var(--space-6) 0;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-8);
  }

  .copyright {
    flex: 1;
  }

  .copyright p {
    margin: 0 0 var(--space-1) 0;
    font-size: var(--font-size-sm);
    color: rgba(255, 255, 255, 0.8);
  }

  .company-details {
    font-size: var(--font-size-xs) !important;
  }

  .company-link {
    color: var(--color-accent-bright);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .company-link:hover {
    text-decoration: underline;
    text-shadow: 0 0 8px rgba(3, 255, 255, 0.5);
  }

  .footer-cta {
    flex-shrink: 0;
  }

  .footer-cta-button {
    background: var(--gradient-electric);
    color: var(--color-text-white);
    padding: var(--space-3) var(--space-6);
    text-decoration: none;
    border-radius: var(--radius-lg);
    font-weight: var(--font-weight-semibold);
    transition: all var(--transition-base);
    display: inline-block;
    font-size: var(--font-size-base);
    border: 2px solid var(--color-accent-bright);
    box-shadow: var(--glow-electric);
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  .footer-cta-button:hover {
    background: var(--gradient-vibrant);
    transform: translateY(-2px) scale(1.02);
    box-shadow: var(--glow-electric), var(--shadow-xl);
    border-color: var(--color-cyan);
  }

  /* Mobile Responsiveness */
  @media (max-width: 1024px) {
    .footer-main {
      grid-template-columns: 1fr 1fr 1fr;
      gap: var(--space-6);
    }

    .company-info {
      grid-column: 1 / -1;
      max-width: none;
      margin-bottom: 1rem;
    }
  }

  @media (max-width: 768px) {
    .footer-main {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-6);
      padding: var(--space-8) 0;
    }

    .company-info {
      grid-column: 1 / -1;
    }

    .footer-bottom-content {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-4);
    }

    .footer-cta {
      width: 100%;
    }

    .footer-cta-button {
      width: 100%;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .footer-main {
      grid-template-columns: 1fr;
      gap: var(--space-6);
      padding: var(--space-6) 0;
    }

    .footer-container {
      padding: 0 var(--space-3);
    }

    .footer-title {
      font-size: var(--font-size-xl);
    }

    .cert-logos {
      justify-content: center;
    }

    .contact-item strong {
      width: 70px;
      font-size: 0.85rem;
    }
  }
</style>