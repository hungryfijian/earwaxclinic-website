---
const currentYear = new Date().getFullYear();

const footerLinks = {
  services: [
    { href: '/treatments/', label: 'Our Treatments' },
    { href: '/how-microsuction-works/', label: 'Microsuction' },
    { href: '/how-irrigation-works/', label: 'Irrigation' },
    { href: '/earwax-clinic-locations/', label: 'Find a Clinic' }
  ],
  information: [
    { href: '/about-ear-wax/', label: 'About Us' },
    { href: '/comprehensive-earwax-information/', label: 'Ear Wax Information' },
    { href: '/ear-wax-faq/', label: 'FAQ' },
    { href: '/testimonials/', label: 'Testimonials' }
  ],
  training: [
    { href: '/micro-suction-training/', label: 'Training Courses' },
    { href: '/professional-microsuction-training-earwax-removal/', label: 'Professional Training' },
    { href: 'https://www.thehearinglabstore.co.uk', label: 'Hearing Lab Store', external: true }
  ]
};
---

<footer class="site-footer">
  <div class="footer-container">
    <!-- Main Footer Content -->
    <div class="footer-main">
      <!-- Company Info -->
      <div class="footer-section company-info">
        <h3 class="footer-title">Earwax Clinic Network</h3>
        <p class="footer-description">
          The UK's leading network of qualified ear wax removal specialists.
          Over 150 clinics providing safe, professional microsuction and irrigation treatments.
        </p>

        <!-- Contact Info -->
        <div class="contact-info">
          <div class="contact-item">
            <strong>Freephone:</strong>
            <a href="tel:08003317002" class="contact-link">0800 331 7002</a>
          </div>
          <div class="contact-item">
            <strong>Local:</strong>
            <a href="tel:01619790212" class="contact-link">0161 979 0212</a>
          </div>
          <div class="contact-item">
            <strong>Ireland:</strong>
            <a href="tel:0212363250" class="contact-link">0212 363 250</a>
          </div>
        </div>

        <!-- Certifications -->
        <div class="certifications">
          <div class="cert-logos">
            <img src="https://image.jimcdn.com/app/cms/image/transf/dimension=120x10000:format=jpg/path/s7be4434f63c79658/image/ie3456658c472cd83/version/1674632299/hcpc-registered-logo.jpg" alt="HCPC Registered" class="cert-logo">
            <img src="https://image.jimcdn.com/app/cms/image/transf/dimension=120x10000:format=jpg/path/s7be4434f63c79658/image/i6c8bf31b83f61699/version/1674632319/nmc-registered-logo.jpg" alt="NMC Registered" class="cert-logo">
          </div>
          <p class="cert-text">Registered & Qualified Professionals</p>
        </div>
      </div>

      <!-- Services Links -->
      <div class="footer-section">
        <h4 class="footer-subtitle">Services</h4>
        <ul class="footer-links">
          {footerLinks.services.map((link) => (
            <li>
              <a href={link.href} class="footer-link">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Information Links -->
      <div class="footer-section">
        <h4 class="footer-subtitle">Information</h4>
        <ul class="footer-links">
          {footerLinks.information.map((link) => (
            <li>
              <a href={link.href} class="footer-link">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Training Links -->
      <div class="footer-section">
        <h4 class="footer-subtitle">Professional Training</h4>
        <ul class="footer-links">
          {footerLinks.training.map((link) => (
            <li>
              <a
                href={link.href}
                class="footer-link"
                target={link.external ? "_blank" : undefined}
                rel={link.external ? "noopener noreferrer" : undefined}
              >
                {link.label}
                {link.external && <span class="external-link-icon">â†—</span>}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <div class="copyright">
          <p>&copy; {currentYear} Earwax Clinic Network. Professional ear care across the UK & Ireland.</p>
          <p class="company-details">
            Trading as <a href="https://www.thehearinglabstore.co.uk" target="_blank" rel="noopener noreferrer" class="company-link">The Hearing Lab Store Ltd</a>
          </p>
        </div>

        <div class="footer-cta">
          <a href="/earwax-clinic-locations/" class="footer-cta-button">
            Find Your Local Clinic
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: #004D40;
    color: white;
    margin-top: auto;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .footer-main {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 2rem;
    padding: 3rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-section {
    display: flex;
    flex-direction: column;
  }

  .company-info {
    max-width: 400px;
  }

  .footer-title {
    color: #4CAF50;
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  .footer-description {
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }

  .footer-subtitle {
    color: #4CAF50;
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  /* Contact Info */
  .contact-info {
    margin-bottom: 2rem;
  }

  .contact-item {
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
  }

  .contact-item strong {
    color: #4CAF50;
    display: inline-block;
    width: 80px;
  }

  .contact-link {
    color: white;
    text-decoration: none;
    font-weight: 500;
  }

  .contact-link:hover {
    color: #4CAF50;
    text-decoration: underline;
  }

  /* Certifications */
  .certifications {
    margin-top: 1rem;
  }

  .cert-logos {
    display: flex;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .cert-logo {
    height: 50px;
    width: auto;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .cert-logo:hover {
    opacity: 1;
  }

  .cert-text {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.8);
    margin: 0;
  }

  /* Footer Links */
  .footer-links {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-links li {
    margin-bottom: 0.5rem;
  }

  .footer-link {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .footer-link:hover {
    color: #4CAF50;
  }

  .external-link-icon {
    font-size: 0.8rem;
    opacity: 0.7;
  }

  /* Footer Bottom */
  .footer-bottom {
    padding: 1.5rem 0;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .copyright {
    flex: 1;
  }

  .copyright p {
    margin: 0 0 0.25rem 0;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .company-details {
    font-size: 0.8rem !important;
  }

  .company-link {
    color: #4CAF50;
    text-decoration: none;
  }

  .company-link:hover {
    text-decoration: underline;
  }

  .footer-cta {
    flex-shrink: 0;
  }

  .footer-cta-button {
    background: #4CAF50;
    color: white;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    border-radius: 5px;
    font-weight: 600;
    transition: all 0.3s ease;
    display: inline-block;
    font-size: 0.9rem;
  }

  .footer-cta-button:hover {
    background: #45a049;
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  /* Mobile Responsiveness */
  @media (max-width: 1024px) {
    .footer-main {
      grid-template-columns: 1fr 1fr 1fr;
      gap: 1.5rem;
    }

    .company-info {
      grid-column: 1 / -1;
      max-width: none;
      margin-bottom: 1rem;
    }
  }

  @media (max-width: 768px) {
    .footer-main {
      grid-template-columns: 1fr 1fr;
      gap: 1.5rem;
      padding: 2rem 0;
    }

    .company-info {
      grid-column: 1 / -1;
    }

    .footer-bottom-content {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .footer-cta {
      width: 100%;
    }

    .footer-cta-button {
      width: 100%;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .footer-main {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      padding: 1.5rem 0;
    }

    .footer-container {
      padding: 0 0.75rem;
    }

    .footer-title {
      font-size: 1.3rem;
    }

    .cert-logos {
      justify-content: center;
    }

    .contact-item strong {
      width: 70px;
      font-size: 0.85rem;
    }
  }
</style>